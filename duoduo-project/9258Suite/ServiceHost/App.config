                 receiveTimeout="10:00:00"
                 sendTimeout="10:00:00" 
                 transferMode="Buffered" 
                 maxBufferSize="1024000000"
                 maxReceivedMessageSize="1024000000" 
                 portSharingEnabled="true">
          <readerQuotas 
