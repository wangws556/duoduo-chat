          <security mode="Transport">
            <transport clientCredentialType="None" />
          </security>
        </binding>
        <binding name="mexBinding" portSharingEnabled="true">
          <security mode="None" />
        </binding>
      </netTcpBinding>
    </bindings>
    <client>
