<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="PasswordTemplate">
        <Grid DataContext="{Binding FunctionVM}">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left"
                       Foreground="Red" FontSize="20" Text="修改资料"/>
            <TextBlock Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                       Foreground="Red" FontSize="14" Text="基本信息"/>
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="用户名：" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="真实姓名：" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="平台号码：" Margin="2"/>
                <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="平台房间：" Margin="2"/>
                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="原密码：" Margin="2"/>
                <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="新密码：" Margin="2"/>
                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="固定电话：" Margin="2"/>
                <TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="移动电话：" Margin="2"/>
                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="QQ：" Margin="2"/>
                <TextBlock Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="MSN：" Margin="2"/>
                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="邮件：" Margin="2"/>
                <TextBlock Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="银行类型：" Margin="2"/>
                <TextBlock Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="银行账号：" Margin="2"/>
                <TextBlock Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="开户行地址：" Margin="2"/>
                <TextBlock Grid.Row="14" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"
                       Text="备注：" Margin="2"/>
                
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                           Text="fu110" Margin="2"/>
                <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="名字" Margin="2"/>
                <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="100001" Margin="2"/>
                <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="100001（用于用户自充提成，如不对请销售助理修改）" Margin="2"/>
                <TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="8" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="tt9258@126.com" Margin="2" Width="150"/>
                <TextBox Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="中国工商银行" Margin="2" Width="150"/>
                <TextBox Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <TextBox Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Text="" Margin="2" Width="150"/>
                <RichTextBox VerticalScrollBarVisibility="Visible" Grid.Row="14" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Left"
                         Margin="2" Width="150"/>
                <Button Grid.Row="15" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                         Margin="2" Content="修改" Width="75"/>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>